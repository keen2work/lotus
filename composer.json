    "type": "library",
    "require": {
        "php": "^8.1",
        "illuminate/http": "^10.0",
        "illuminate/support": "^10.0",
        "spatie/laravel-html": "^3.2"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Shane Perera",
            "email": "shane@elegantmedia.com.au"
        }
    ],
    "extra": {
